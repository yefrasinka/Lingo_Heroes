<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Питання -->
    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Тут буде питання"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="16dp"/>

    <!-- Варіанти відповіді -->
    <RadioGroup
        android:id="@+id/answersRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/nextButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/answerRadioButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Варіант відповіді 1"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <RadioButton
            android:id="@+id/answerRadioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Варіант відповіді 2"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <RadioButton
            android:id="@+id/answerRadioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Варіант відповіді 3"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <RadioButton
            android:id="@+id/answerRadioButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Варіант відповіді 4"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>
    </RadioGroup>

    <!-- Кнопка "Далі" -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>