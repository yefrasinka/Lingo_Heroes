<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Styl dla przycisków -->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Styl dla pól tekstowych -->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#999999</item>
    </style>

    <style name="BottomNavTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Styl dla progress bara tematu -->
    <style name="TopicProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/topic_progress_bar</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <!-- Styl dla progress bara podtematu -->
    <style name="SubtopicProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/subtopic_progress_bar</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">12dp</item>
    </style>

    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Styl dla przycisków odpowiedzi -->
    <style name="AnswerButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/purple_700</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">2dp</item>
    </style>

</resources>
