<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Верхняя панель -->

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#AA4A148C"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical">

        <!-- Аватарка -->
        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_avatar"
            android:contentDescription="Avatar"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Ник -->
        <TextView
            android:id="@+id/usernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Imię"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Валюта -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/currencyIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_coin"
                android:contentDescription="Currency" />

            <TextView
                android:id="@+id/currencyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Опыт -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/experienceIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_trophy"
                android:contentDescription="Experience" />

            <TextView
                android:id="@+id/experienceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3200"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Основной контент -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#1D6750A3"
        app:layout_constraintTop_toBottomOf="@id/topPanel"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/comingSoonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coming soon..."
            android:textSize="32sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:gravity="center" />
    </LinearLayout>


    <!-- Нижняя панель -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="#AA4A148C"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconSize="36dp"
        app:itemTextAppearanceActive="@style/BottomNavTextStyle"
        app:itemTextAppearanceInactive="@style/BottomNavTextStyle"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
